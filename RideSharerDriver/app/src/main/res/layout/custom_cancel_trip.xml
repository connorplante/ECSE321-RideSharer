<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/textView_id"
        android:textSize="30dp"
        android:layout_width="82dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#DB3434"
        android:textColor="#FFFF"
        android:onClick="cancelTrip"
        android:text="TripId" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_id"
        android:layout_alignLeft="@id/textView_date"
        android:layout_alignRight="@id/textView_date"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="110dp"
        android:text="Status"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView_start"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_time"
        android:layout_alignParentStart="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/textView_end"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_start"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="0dp"
        android:text="Date"
        android:textSize="18dp" />

</RelativeLayout>